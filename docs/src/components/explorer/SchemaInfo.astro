---
import BooleanCard from '@components/explorer/BooleanCard.astro';

const { schema, ...rest } = Astro.props;
---

<style>
  .SchemaInfo__cards {
    display: grid;
    gap: var(--space-sm);
  }

  @media screen and (min-width: 960px) {
    .SchemaInfo__cards {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>

<div class="SchemaInfo" {...rest}>
  <h2 class="beta">Info</h2>

  <div class="SchemaInfo__cards" data-docsearch-ignore>
    <BooleanCard
      title="Abstract"
      info="Abstract schemata are used for inheritance only and shouldn’t be used directly."
      value={schema.abstract}
    />

    <BooleanCard
      title="Generated"
      info="Entities using a generated schema shouldn’t be created directly by users."
      value={schema.generated}
    />

    <BooleanCard
      title="Matchable"
      info="Entities using a matchable schema can be used for matching and cross-referencing."
      value={schema.matchable}
    />

    <BooleanCard
      title="Hidden"
      info="Entities using a hidden schema shouldn’t be displayed in user interfaces or created by users."
      value={schema.hidden}
    />
  </div>
</div>
