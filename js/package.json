{
  "name": "@alephdata/followthemoney",
  "version": "1.24.3",
  "description": "JavaScript version of the followthemoney data model",
  "keywords": [],
  "main": "dist/followthemoney.umd.js",
  "module": "dist/followthemoney.es5.js",
  "typings": "dist/types/followthemoney.d.ts",
  "files": [
    "dist"
  ],
  "author": "OCCRP Data <data@occrp.org>",
  "repository": {
    "type": "git",
    "url": "https://github.com/alephdata/followthemoney"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist && npm run build:icons",
    "build:icons": "node scripts/buildIcons.js",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts",
    "build:docs": "typedoc --out docs --target es6 --excludeExternals  --theme minimal --mode file src",
    "start": "npm run build:icons && rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "@types/node": "^13.1.2",
    "colors": "^1.4.0",
    "coveralls": "^3.0.6",
    "cross-env": "^7.0.0",
    "jest": "^25.1.0",
    "jest-config": "^25.1.0",
    "lint-staged": "^10.0.4",
    "prettier": "^1.18.2",
    "prompt": "^1.0.0",
    "replace-in-file": "^5.0.2",
    "rimraf": "^3.0.0",
    "rollup": "^1.23.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.5.0",
    "@wessberg/rollup-plugin-ts": "^1.2.15",
    "shelljs": "^0.8.3",
    "svgo": "^1.3.0",
    "ts-jest": "^25.0.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typedoc": "^0.16.2",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@types/uuid": "^3.4.5",
    "uuid": "^3.3.3"
  }
}
