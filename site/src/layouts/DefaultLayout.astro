      <div class="flew-grow-0 flex-shrink-0 w-1/5">
        <Sidebar>
          {Astro.slots.toc && (
            <strong
              class="uppercase tracking-widest text-sm mb-2 block text-slate-700 font-semibold dark:text-slate-400"
            >
              On this page
            </strong>
          )}
          <slot name="toc" />
        </Sidebar>
      </div>
    </div>
  </body>
</html>
