---
import { PropertyType } from '@alephdata/followthemoney';
import SchemaLink from './SchemaLink.astro';
import PropertyTypeLink from './PropertyTypeLink.astro';

const { property } = Astro.props;
const range = property.type.name === PropertyType.ENTITY && property.getRange();
---

{
  property.type.name === PropertyType.ENTITY ? (
    range.name ? (
      <Fragment>
        <SchemaLink schema={range} text={range.name} />
      </Fragment>
    ) : (
      'entity'
    )
  ) : (
    <PropertyTypeLink type={property.type} text={property.type.name} />
  )
}
