---
const { schema } = Astro.props;
const parents = schema.getExtends();
---

{
  parents.length > 0 && (
    <>
      <h2>Extends</h2>
      <p>The {schema.label} schema extends the following schemata:</p>

      <ul>
        {parents.map((parent) => (
          <li>
            <a href={`/schemata/${parent.name}`}>{parent.label}</a>
          </li>
        ))}
      </ul>
    </>
  )
}

{
  parents.length <= 0 && (
    <p>{schema.plural} do not inherit from any other schemata.</p>
  )
}
