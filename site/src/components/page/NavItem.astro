---
const { link, active = false } = Astro.props;
---

<li class="-mx-2">
  <a
    href={link}
    class:list={[
      'block py-1 px-2 rounded',
      !active && 'text-slate-500 hover:text-slate-800 dark:text-slate-300 dark:hover:text-slate-50',
      active && 'bg-slate-100 text-slate-800 font-semibold dark:bg-slate-800 dark:text-slate-200',
    ]}
  >
    <slot />
  </a>
</li>
